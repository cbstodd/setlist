<% provide(:text, "Sign in") %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "jumbotron"}) do |f| %>

  <fieldset>
    <legend><h2>Sign in</h2></legend>
  
  <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "remember_me" %></div>
  <% end -%>
  <br />

  <div><%= f.submit "Sign in", class: "btn btn-large btn-danger" %></div>

  <%= render "devise/shared/links" %>
  </fieldset>
<% end %>


